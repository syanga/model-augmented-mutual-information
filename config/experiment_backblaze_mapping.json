{
    "name": "BackblazeMapping",
    "n_gpu": 1,
    "arch": {
        "type": "MappingRNNBinary",
        "args": {
            "num_features": 36,
            "dim_z_per": 3,
            "rnn_states": 16,
            "rnn_layers": 2,
            "decoder_layers": 1000,
            "rnn_type": "GRU",
            "block_drop": 0.0,
            "rnn_drop": 0.0,
            "decoder_drop": 0.0,
            "delta": 3
        }
    },
    "data_loader": {
        "type": "SupervisedDataLoader",
        "args": {
            "data_dir": "data/backblaze_10k_36_30day.h5",
            "batch_size": 64,
            "shuffle": true,
            "validation_split": 0.15,
            "test_split": 0.15,
            "num_workers": 6,
            "seed": 0
        }
    },
    "optimizer": {
        "type": "Adam",
        "args": {
            "lr": 1e-3,
            "weight_decay": 0.0,
            "amsgrad": true
        }
    },
    "loss": {
        "type": "bce_weighted",
        "reg_coeff": 1e-1
    },
    "metrics": [
        "detection_atper"
    ],
    "lr_scheduler": {
        "type": "ReduceLROnPlateau",
        "args": {
            "patience": 20,
            "factor": 0.5
        }
    },
    "trainer": {
        "type": "TrainerPushPull",
        "epochs": 500,
        "save_dir": "saved/",
        "save_period": 50,
        "verbosity": 1,
        "monitor": "min val_loss",
        "early_stop": 30,
        "log_dir": "saved/runs",
        "plotz": true
    }
}